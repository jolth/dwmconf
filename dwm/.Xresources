! Terminal --------------------------------------------------------------------
! tangoesque scheme
*background: #111111
*foreground: #babdb6
! Black (not tango) + DarkGrey
*color0:  #000000
*color8:  #555753
! DarkRed + Red
*color1:  #ff6565
*color9:  #ff8d8d
! DarkGreen + Green
*color2:  #93d44f
*color10: #c8e7a8
! DarkYellow + Yellow
*color3:  #eab93d
*color11: #ffc123
! DarkBlue + Blue
*color4:  #204a87
*color12: #3465a4
! DarkMagenta + Magenta
*color5:  #ce5c00
*color13: #f57900
!DarkCyan + Cyan (both not tango)
*color6:  #89b6e2
*color14: #46a4ff
! LightGrey + White
*color7:  #cccccc
*color15: #ffffff

! Xcursor --------------------------------------------------------------------
Xcursor.theme: Vanilla-DMZ-AA
Xcursor.size:  20

! Xft settings ---------------------------------------------------------------
! basic font, remplaza el uso de fonts.conf no usar si se piensa 
! usar un entorno de escritorio
!Xft.dpi:        97
Xft.dpi:        98
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
!: hintnone, hintslight, hintmedium, and hintfull. hintslight
Xft.autohint: false
!Xft.hintstyle: hintslight 
Xft.hintstyle: hintfull
!: lcddefault, lcdlight, lcdlegacy, lcdnone
Xft.lcdfilter: lcddefault

! xterm ----------------------------------------------------------------------
xterm*VT100.geometry:     120x35
xterm*faceName:           Terminus:style=Regular:size=7
xterm*font:              -*-dina-medium-r-*-*-16-*-*-*-*-*-*-*
xterm*dynamicColors:      false
xterm*utf8:               2
xterm*eightBitInput:      true
xterm*saveLines:          2000
xterm*scrollKey:          true
xterm*scrollTtyOutput:    false
xterm*scrollBar:          false
xterm*rightScrollBar:     false
xterm*jumpScroll:         true
xterm*multiScroll:        true
xterm*toolBar:            false
!Copying and Pasting
xterm*selectToClipboard:  true

!! URxvt
URxvt*font: xft:droid sans mono:pixelsize=20:antialias=true:hinting=true
URxvt*boldFont: xft:droid sans mono:bold:pixelsize=20:antialias=true:hinting=true
